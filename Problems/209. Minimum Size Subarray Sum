class Solution:
    def minSubArrayLen(self, target: int, nums: List[int]) -> int:
        l = 0
        n = len(nums)
        ml = float('inf')
        curr = 0
        for r in range(n):
            curr += nums[r]

            while curr >= target:
                if r - l + 1 < ml:
                    ml = r - l + 1
                curr -= nums[l]
                l += 1

        return ml if ml != float('inf') else 0


        
